generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")  // âœ… Keep exactly this text. Do not paste the link here.
}

model Appointment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String
  email     String
  date      String
  reason    String
  createdAt DateTime @default(now())
}